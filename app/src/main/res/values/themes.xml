<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="colorAccentedSurface">@color/color_primary_light</item>
        <item name="colorIcon">@color/color_gray</item>
        <item name="colorDivider">@color/color_divider_dark</item>

        <item name="colorBG">@color/color_BG_light</item>
        <item name="colorBG_swipe">@color/color_primary_dark</item>
        <item name="colorIndicator">@color/color_green</item>
        <item name="colorItems">@android:color/white</item>

        <item name="colorArchive">@color/color_gray</item>
        <item name="colorTitle">@color/color_primary</item>
        <item name="colorMess">@color/color_gray_dark</item>
        <item name="colorCounter">@color/color_indicator</item>

        <item name="colorSnackbar">@color/color_primary</item>
        <item name="colorCheckDoneUser">@color/color_primary</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>

    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>