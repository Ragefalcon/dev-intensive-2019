<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_size" xmlns:tools="http://schemas.android.com/tools"
                android:padding="@dimen/spacing_normal_16"
                android:background="?attr/colorItems"
>
    <ImageView
               android:id="@+id/ic_icon_archive"
               android:layout_width="@dimen/avatar_item_size"
               android:layout_height="@dimen/avatar_item_size"
               android:background="@drawable/bg_icon_archive"
               android:src="@drawable/ic_archive_black_24dp"
               android:padding="@dimen/spacing_small_8"
               android:layout_marginRight="@dimen/spacing_normal_16"
               android:layout_alignParentLeft="true"
    />
    <TextView
            android:id="@+id/tv_title_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_archive"
            android:textColor="?attr/colorTitle"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:layout_toRightOf="@id/ic_icon_archive"
            android:layout_toLeftOf="@id/tv_date_archive"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:maxLines="1"
    />
    <TextView
            android:id="@+id/tv_message_author_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="John_Doe"
            android:textColor="?attr/colorTitle"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:layout_toRightOf="@id/ic_icon_archive"
            android:layout_marginRight="@dimen/spacing_tiny_4"
            android:layout_below="@id/tv_title_group"
            tools:visibility="visible"
    />
    <TextView
            android:id="@+id/tv_message_archive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Когда я проходил интенсив, я мало спал"
            android:textColor="?attr/colorMess"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:layout_toRightOf="@id/tv_message_author_archive"
            android:layout_toLeftOf="@id/tv_counter_archive"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_below="@id/tv_title_group"
    />
    <TextView
            android:id="@+id/tv_date_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="?attr/colorMess"
            tools:text="14:00"
    />
    <TextView
            android:id="@+id/tv_counter_archive"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/counter_size"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:minWidth="@dimen/counter_size"
            android:background="@drawable/bg_counter"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"
            tools:text="1331"
    />

</RelativeLayout>